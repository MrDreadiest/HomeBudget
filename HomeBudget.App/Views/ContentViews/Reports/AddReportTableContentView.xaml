<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="HomeBudget.App.Views.ContentViews.Reports.AddReportTableContentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:HomeBudget.App.Views.ContentViews.UniversalControls"
    xmlns:icons="clr-namespace:HomeBudget.App.Resources.Icons"
    xmlns:reportModels="clr-namespace:HomeBudget.App.ViewModels.ContentViewModels.Reports"
    x:DataType="reportModels:AddReportTableContentViewModel">

    <Grid RowDefinitions="*,Auto">

        <Border
            x:Name="Header"
            BackgroundColor="{StaticResource Primary}"
            Stroke="{StaticResource Primary}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10,10,0,0" />
            </Border.StrokeShape>

            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,*">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="15"
                    Style="{StaticResource H2Label}"
                    Text="{Binding Title}"
                    TextColor="{StaticResource White}" />

                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0"
                    Command="{Binding ToggleIsCollapsedCommand}"
                    Style="{StaticResource NavigationIconButton}"
                    Text="{x:Static icons:Icons.Menu}"
                    TextColor="{StaticResource White}" />
            </Grid>
        </Border>

        <Border
            x:Name="Body"
            Grid.Row="1"
            Padding="15"
            BackgroundColor="White"
            Stroke="White">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,10,10" />
            </Border.StrokeShape>

            <VerticalStackLayout>

                <Frame Style="{StaticResource SecondaryEntryFrame}">
                    <Entry
                        Placeholder="Nazwa"
                        Style="{StaticResource DarkMediumEntry}"
                        Text="{Binding Name}" />
                </Frame>

                <Frame Style="{StaticResource SecondaryEntryFrame}">
                    <Entry
                        Placeholder="Opis dodatkowy"
                        Style="{StaticResource DarkMediumEntry}"
                        Text="{Binding Description}" />
                </Frame>

                <Button
                    Command="{Binding AddCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Text="Wykonaj" />

            </VerticalStackLayout>

        </Border>

    </Grid>


</ContentView>
